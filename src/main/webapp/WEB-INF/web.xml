<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<!-- Jersey Servlet configurations -->
	<display-name>E-Commerce Auction System</display-name>

    <!-- Default homepage -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- REST Controller -->
    <servlet>
        <servlet-name>Jersey REST</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jakarta.ws.rs.Application</param-name>
            <param-value>com.ecommerce.JerseyConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Jersey REST</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>


    <!--  SESSION PROTECTION FILTER  -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.ecommerce.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/*</url-pattern> 
    </filter-mapping>

</web-app>