  "item": [
    {
      "name": "Signup - Valid User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"test\",\n  \"password\": \"StrongPass123\",\n  \"firstName\": \"Roop\",\n  \"lastName\": \"Kiran\",\n  \"streetNumber\": \"101\",\n  \"streetName\": \"York Blvd\",\n  \"city\": \"Toronto\",\n  \"state\": \"ON\",\n  \"postalCode\": \"M3J1P3\",\n  \"country\": \"Canada\",\n  \"seller\": false\n}"
        },
        "url": {
          "raw": "http://localhost:8080/EECS4413-E-Commerce-System/api/users/signup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["EECS4413-E-Commerce-System", "api", "users", "signup"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
				
              "pm.test(\"Signup should succeed\", function () {",
              "    pm.response.to.have.status(201);",
              "});"
            ]
          }
        }
      ]
    },	 
	
