{
  "info": {
    "name": "Payment API",
    "_postman_id": "12345-67890-abcdef",
    "description": "Postman collection for testing Payment API (UC5 & UC6)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "UC5 - Create Payment",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": 101,\n  \"auction_id\": 5001,\n  \"amount\": 129.99,\n  \"payment_time\": \"2025-11-02T15:30:00\",\n  \"status\": \"PENDING\",\n  \"billing_name\": \"John Doe\",\n  \"billing_address\": \"123 Maple Street\",\n  \"city\": \"Toronto\",\n  \"state\": \"ON\",\n  \"postal_code\": \"M5V 2T6\",\n  \"country\": \"Canada\",\n  \"card_holder_name\": \"John Doe\",\n  \"card_number\": \"4111111111111111\",\n  \"card_type\": \"VISA\",\n  \"expiry_date\": \"12/26\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/ecommerce/api/payment",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["ecommerce","api","payment"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test(\"Payment created successfully\", function () {",
              "    const res = pm.response.json();",
              "    pm.expect(res.message).to.eql(\"Payment created successfully.\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "UC6 - Get Payment by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/ecommerce/api/payment?id=1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["ecommerce","api","payment"],
          "query": [{"key":"id","value":"1"}]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Contains paymentId\", function () {",
              "    const res = pm.response.json();",
              "    pm.expect(res).to.have.property('payment_id');",
              "    pm.expect(res).to.have.property('amount');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "UC6 - Get All Payments",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/ecommerce/api/payment",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["ecommerce","api","payment"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Response is an array\", function () {",
              "    const res = pm.response.json();",
              "    pm.expect(res).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Update Payment Status",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"status\": \"COMPLETED\" }"
        },
        "url": {
          "raw": "http://localhost:8080/ecommerce/api/payment/status?id=1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["ecommerce","api","payment","status"],
          "query": [{"key":"id","value":"1"}]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Payment status updated\", function () {",
              "    const res = pm.response.json();",
              "    pm.expect(res.message).to.eql('Payment status updated successfully.');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
